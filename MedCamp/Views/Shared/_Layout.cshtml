@using MedCamp.Models
@using MedCamp.Models.ViewModels
@inject MedCampContext _context
@{
    var accessToken = Context.Request.Cookies["user-access-token"];
    UserInfoViewModel user = null;
    if (!string.IsNullOrEmpty(accessToken))
    {
        user=_context.Users.Where(x => x.AccessToken.Equals(accessToken)).Select(x=> new UserInfoViewModel {Name=x.FirstName,Role=x.Role.Name }).FirstOrDefault();
    }
}
    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MedCamp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MedCamp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MedCamp</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                        @if(user!=null){
                            if (user.Role.Equals("Doctor"))
                            {
                                
                            }
                            else if (user.Role.Equals("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="Users">Users</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="Users">Users</a>
                                </li>
                                 <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="Users">Users</a>
                                </li>
                                 <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="Users">Users</a>
                                </li>
                                 <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="Users">Users</a>
                                </li>
                                 <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Admin" asp-action="Users">Users</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Account" asp-action="Profile">@user.Name</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Logout</a>
                                </li>
                            }
                        }
                        else{
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div style="padding:0px 30px">
            @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div>
            &copy; 2022 - MedCamp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
